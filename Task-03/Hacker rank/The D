n = int(input())
sp = n // 2
lj = 1
for i in range(1,n+1):
    for j in range(1, sp + 1):
        print("*", end = '')
    for k in range(1, lj + 1):
        print("D",end = '')
    for l in range(1, sp + 1):
        print("*",end = '')
    print()
    if (i <= n // 2):
        sp -= 1
        lj += 2
    else:
        sp += 1
        lj -= 2
